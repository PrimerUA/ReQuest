<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/vacancyItem_contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10p"
        android:layout_marginRight="@dimen/d10p"
        android:layout_marginTop="@dimen/d20p"
        android:background="@drawable/fancy_listview"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vacancyItem_companyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d5p"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#ffffff"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:text="Svitla Systems Inc."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#33b5e5"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/vacancyItem_prizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/fancy_prize"
                android:gravity="center"
                android:maxLines="@integer/i1"
                android:text="$150"
                android:textColor="@android:color/white"
                android:textSize="@dimen/d30p" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fancy_title"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/vacancyItem_titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d3p"
                android:gravity="center"
                android:text="Ищу Андроид разработчика в Киевский офис"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preffer_time_text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/vacancyItem_expireText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d2p"
                    android:text="15.05.2014 18:00"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/vacancyItem_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d1p"
            android:layout_marginRight="@dimen/d1p"
            android:adjustViewBounds="true"
            android:src="@drawable/office_example" />

        <LinearLayout
            android:id="@+id/vacancyItem_expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5p"
            android:layout_marginRight="@dimen/d5p"
            android:layout_marginTop="@dimen/d20p"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc_item_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salary_item_text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/vacancyItem_salaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d2p"
                    android:layout_marginRight="@dimen/d10p"
                    android:text="N/A"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10p"
                    android:text="@string/city_text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/vacancyItem_cityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d2p"
                    android:text="N/A"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <TextView
                android:id="@+id/vacancyItem_demandsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d2p"
                android:layout_marginTop="@dimen/d5p"
                android:text="- требования" />

            <TextView
                android:id="@+id/vacancyItem_termsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d5p"
                android:text="- условия" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_item_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/vacancyItem_companyDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d2p"
                android:layout_marginTop="@dimen/d5p"
                android:text="описание компании" />

            <TextView
                android:id="@+id/vacancyItem_companyAddressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d5p"
                android:text="город" />

            <LinearLayout
                android:id="@+id/vacancyItem_responds_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/vacancyItem_respondsButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/create_button"
                    android:text="@string/vacancy_responds_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/vacancyItem_buyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/create_button"
                    android:text="@string/buy_text" />

                <Button
                    android:id="@+id/vacancyItem_recommendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/create_button"
                    android:text="@string/recommend_text" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/vacancyItem_avatarText"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/vacancyItem_authorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Наталия Малецкая"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/vacancyItem_createdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.03.2014 15:27"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:typeface="serif" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>